{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true
  },
  "include": [],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
  ]
}
